<div class="jumbotron">
	<h1>Welcome to HMS</h1>
	<div class="center">
	
		<%= form_tag show_hospitals_path, method: 'post' do  %>
			<div class="form-group form-inline">
			    <%= label_tag :email, "Email", required: true%>
			    <%= email_field_tag :email, params[:email], class: 'form-control col-sm-7', required: true %>
			</div>
			<div class="form-group">
				<%= submit_tag "Continue", class: 'btn btn-info' %>
			</div>
		
		<%end %>
	</div>
</div>